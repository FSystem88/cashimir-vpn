{
  "manifest_version": 3,
  "name": "CASHIMIR VPN",
  "version": "5.0",
  "description": "Управление SOCKS4/SOCKS5/HTTP/HTTPS-прокси с современным интерфейсом, темами, профилями, быстрым поиском и умными списками исключений.",
  "permissions": [
    "proxy",
    "storage",
    "scripting",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "downloads",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": [
    "<all_urls>",
    "http://pubproxy.com/*"
  ]
}